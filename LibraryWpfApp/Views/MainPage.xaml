<Page x:Class="LibraryWpfApp.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryWpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Style="{StaticResource BackgroundColorWindow}">
        
        <Border Style="{StaticResource SlimFullyRoundedBorder}">
            
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="ViewingBooksButton" Click="ViewingBooksButton_Click">Просмотр книг</Button>
                <Button x:Name="BookManegmentButton" Click="BookManegmentButton_Click">Управление книгами</Button>
                <Button x:Name="ReadersManagmentButton" Click="ReadersManagmentButton_Click">Управление читателями</Button>
                
            </StackPanel>
        </Border>

    </Grid>
</Page>
