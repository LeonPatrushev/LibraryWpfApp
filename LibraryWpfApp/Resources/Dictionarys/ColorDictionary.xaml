<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
    <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
    <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
    <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>

    <SolidColorBrush x:Key="MainColor" Color="#26323c"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#2e3c4b"/>
    <SolidColorBrush x:Key="ContrastingGreenColor" Color="#1ea54c"></SolidColorBrush>
    <SolidColorBrush x:Key="ContrastingWhiteColor" Color="#c3c9c9"></SolidColorBrush>

    <Style x:Key="BackgroundColorWindow">
        <Setter Property="Grid.Background" Value="{StaticResource SecondaryColor}"></Setter>
    </Style>

    <Style x:Key="BackgroundColor">
        <Setter Property="Grid.Background" Value="{StaticResource MainColor}"></Setter>
    </Style>

</ResourceDictionary>