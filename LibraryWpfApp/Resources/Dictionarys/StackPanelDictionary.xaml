<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="PreviewBookStackPanel" TargetType="StackPanel">
        <Setter Property="Margin" Value="30"></Setter>
        <Setter Property="Background" Value="{StaticResource MainColor}"></Setter>
    </Style>

    <Style x:Key="ClassicMarginStackPanel" TargetType="StackPanel">
        <Setter Property="Margin" Value="10"></Setter>
    </Style>
</ResourceDictionary>